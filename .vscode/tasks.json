{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-app",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "shell-cleanup-folders",
                "mvn-clean",
                "mvn-compile",
            ]
        },
        {
            "label": "mvn-generate-sources",
            "type": "shell",
            "command": "mvn generate-sources",
            "group": "test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "mvn-clean",
            ]
        },
        {
            "label": "mvn-test",
            "type": "shell",
            "command": "mvn test",
            "group": "test",
        },
        {
            "label": "mvn-clean",
            "type": "shell",
            "command": "mvn clean",
            "group": "build",
        },
        {
            "label": "mvn-compile",
            "type": "shell",
            "command": "mvn compile",
            "group": "build",
        },
        {
            "label": "mvn-package",
            "type": "shell",
            "command": "mvn package",
            "group": "build",
        },
        {
            "label": "mvn-dependencies-tree",
            "type": "shell",
            "command": "mvn dependency:tree 1> logs/maven-dependency-tree.log",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "shell-cleanup-folders",
                "shell-create-folders"
            ]
        },
        {
            "label": "mvn-display-dependency-updates",
            "type": "shell",
            "command": "mvn versions:display-dependency-updates 1> logs/maven-dependency-updates.log",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "shell-cleanup-folders",
                "shell-create-folders"
            ]
        },
        {
            "label": "shell-create-folders",
            "type": "shell",
            "command": "mkdir logs",
            "group": "none",
        },
        {
            "label": "shell-cleanup-folders",
            "type": "shell",
            "command": "rm -rf bin logs",
            "group": "none",
        },
    ]
}